{
  "autoload": {
    "psr-4": {
      "LTT\\": "src/"
    },
    "files": [
      "config/const.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.5"
  },
  "scripts": {
    "stan": "vendor/bin/phpstan analyse -c phpstan.neon",
    "test": "vendor/bin/phpunit tests"
  },
  "config": {
    "platform": {
      "php": "8.2"
    }
  },
  "require": {
    "monolog/monolog": "^3.8",
    "symfony/console": "^7.2"
  },
  "bin": [
    "ltt"
  ]
}
