{
  "name": "olegvashkevich/ltt",
  "description": "Libs, tricks and tips",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "LTT\\": "src/"
    },
    "files": [
      "config/const.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "php": ">=8.2",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.5"
  },
  "scripts": {
    "stan": "vendor/bin/phpstan analyse -c phpstan.neon",
    "test": "vendor/bin/phpunit tests"
  },
  "require": {
    "monolog/monolog": "^3.8",
    "symfony/console": "^7.2",
    "olegv/config": "^1.0"
  },
  "bin": [
    "ltt"
  ]
}
